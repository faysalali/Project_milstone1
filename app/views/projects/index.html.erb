<div class="container">
  <div class="row">
    <div class="col-lg-11">
      <div class="text-right">
        <%= form_tag projects_path, method: :get do %>
          <div class ="search-margin">
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", name:nil %>
          </div>
        <% end %>
        <%= link_to "Create New Project", new_project_path, id: "refresh-btn", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
  <h2>Pojects</h2>
  <table class="table table-bordered text-size">
      <tr>
        <th>Title</th>
        <th>Status</th>
        <th>view Detail</th>
        <th>Action</th>
        <th>Comments</th>
        <th>Time</th>
      </tr>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.status.capitalize %></td>
          <td>
            <%= link_to 'View Detail', project_path(project) %>
            <%= link_to '/ Edit Project', edit_project_path(project) %>
          </td>
          <td>
            <%= link_to 'Mark Complete', mark_complete_project_path(project), class: 'btn btn-success btn-md' unless project.completed?  %>
          </td>
          <td>
            <%= link_to 'Add Comment', new_project_comment_path(project), class: 'btn btn-success btn-md', remote: true %>
          </td>
          <td>
            <%= link_to 'Add Time', new_project_time_log_path(project), class: 'btn btn-primary btn-md', remote: true unless !@project_ids.include? project.id %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
