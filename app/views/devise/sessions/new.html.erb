<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="imgcontainer">
    <%= image_tag 'images.png' %>
  </div>
  <div class="container">
    <h2>Log in</h2>
    <div class="form-group"">
      <label><b><%= f.label :email %></b></label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Enter Email', class: 'form-control margin-bottom' %>
    </div>
    <div class="form-group"">
      <label><b><%= f.label :password %></b></label>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter Password', class: 'form-control margin-bottom'%>
    </div>
    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-primary btn-md' %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="form-group"">
        <%= f.check_box :remember_me %>
        <label><b><%= f.label :remember_me %></b></label>
      </div>
    <% end -%>
  </div>
<% end %>


