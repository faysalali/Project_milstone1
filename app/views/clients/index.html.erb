<div class="container">
  <div class="row">
    <div class="col-lg-11">
      <div class="text-right">
        <%= form_tag clients_path, method: :get do %>
          <div class="search-margin">
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", name:nil %>
          </div>
        <% end %>
        <%= link_to "Create Client", new_client_path, id: "refresh-btn", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
  <h2>Clients</h2>
  <table class="table table-bordered text-size">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Country</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.email %></td>
          <td><%= client.country_name %></td>
          <td><%= link_to 'Preview Profile', client_path(client) %>
            <%= link_to '/ Edit Profile', edit_client_path(client) %>
            <%= link_to '/ Delete', client_path(client),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
